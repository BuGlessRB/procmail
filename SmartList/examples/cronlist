test=test			# /bin/test
echo=echo			# /bin/echo
dirname=dirname			# /bin/dirname

PATH=SedBinDir:SedHomeDir/.bin:$PATH:/usr/local/bin
	# make sure that the PATH provided here finds all standard utilities
	# AND formail and lockfile.

a=`$dirname $0`/..
cd $a

#
# Put all commands to be run for this list on a regular basis below here
#

cronlist=yes flush_digests

exit 0
